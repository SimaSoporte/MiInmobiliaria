@model MiInmobiliaria.Models.Inquilino

@{
    ViewData["Title"] = "Details";
}

<div class="row align-items-baseline">
    <div class="col-3 text-primary"> <h1><i class="fas fa-bars"></i> Detalle</h1> </div>
    <div class="col-9"> <h4>Inquilino</h4> </div>
</div>

<hr />
<div class="row">
    <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <dl class="row">
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Id)
            </dd>

            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Persona.TipoPersona)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Persona.TipoPersona.Nombre)
            </dd>

            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Persona.Apellido)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Persona.Apellido)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Persona.Nombre)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Persona.Nombre)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Persona.FechaNac)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Persona.FechaNac)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Persona.Dni)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Persona.Dni)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Persona.Telefono)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Persona.Telefono)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Persona.Email)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Persona.Email)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Persona.Avatar)
            </dt>
            <dd class="col-9 col-sm-9 ">
                @if (Model.Persona.Avatar != "")
                {
                    <img width="300" src="@Model.Persona.Avatar" /> }
                else
                {
                    <p>Sin avatar</p>
                }
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Activo)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Activo)
            </dd>
        </dl>
    </div>
</div>


<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Volve a la Lista</a>
</div>
