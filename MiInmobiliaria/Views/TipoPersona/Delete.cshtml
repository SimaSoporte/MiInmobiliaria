@model MiInmobiliaria.Models.TipoPersona

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>Are you sure you want to delete this?</h3>



<div>
    <h4>TipoPersona</h4>
    <hr />

    <div class="row">
        <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5">

            <dl class="row">
                <dt class="col-3 col-sm-3">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-9 col-sm-9 border">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-3 col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-9 col-sm-9 border">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
            </dl>

        </div>
    </div>

    <form asp-action="Delete">
        <input type="submit" value="Borrar" class="btn btn-danger" onclick="return Confirmar()" /> |
        <a asp-action="Index">Volver a la Lista</a>
    </form>

</div>



        <script type="text/javascript">
            function Confirmar() {
                var opcion = confirm("Borrar Registro. Confirma la operacion?");
                if (opcion == true) {
                    return true;
                } else {
                    return false;
                }
            }
        </script>
