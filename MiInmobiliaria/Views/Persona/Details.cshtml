@model MiInmobiliaria.Models.Persona

@{
    ViewData["Title"] = "Details";
}

<div class="row align-items-baseline">
    <div class="col-3 text-primary"> <h1><i class="fas fa-bars"></i> Detalle</h1> </div>
    <div class="col-9"> <h4>Persona</h4> </div>
</div>

<hr />
<div class="row">
    <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div>
            <dl class="row">
                <dt class="col-3 col-sm-3">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-9 col-sm-9 border form-control">
                    @Html.DisplayFor(model => model.Id)
                </dd>

                <dt class="col-3 col-sm-3">
                    @Html.DisplayNameFor(model => model.TipoPersona)
                </dt>
                <dd class="col-9 col-sm-9 border form-control">
                    @Html.DisplayFor(model => model.TipoPersona.Nombre)
                </dd>

                <dt class="col-3 col-sm-3">
                    @Html.DisplayNameFor(model => model.Apellido)
                </dt>
                <dd class="col-9 col-sm-9 border form-control">
                    @Html.DisplayFor(model => model.Apellido)
                </dd>
                <dt class="col-3 col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-9 col-sm-9 border form-control">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-3 col-sm-3">
                    @Html.DisplayNameFor(model => model.FechaNac)
                </dt>
                <dd class="col-9 col-sm-9 border form-control">
                    @Html.DisplayFor(model => model.FechaNac)
                </dd>
                <dt class="col-3 col-sm-3">
                    @Html.DisplayNameFor(model => model.Dni)
                </dt>
                <dd class="col-9 col-sm-9 border form-control">
                    @Html.DisplayFor(model => model.Dni)
                </dd>
                <dt class="col-3 col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-9 col-sm-9 border form-control">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-3 col-sm-3">
                    @Html.DisplayNameFor(model => model.Avatar)
                </dt>
                <dd class="col-9 col-sm-9 ">
                    @if (Model.Avatar != "")
                    {
                        <img width="300" src="@Model.Avatar" /> }
                    else
                    {
                        <p>Sin avatar</p>
                    }
                </dd>

            </dl>
        </div>
    </div>
</div>


<div>
    <div class="btn btn-warning"> @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) </div> |
    <a asp-action="Index">Volver a la Lista</a>
</div>
