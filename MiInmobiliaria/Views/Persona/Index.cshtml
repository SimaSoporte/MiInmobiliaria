@model IEnumerable<MiInmobiliaria.Models.Persona>

@{
    ViewData["Title"] = "Index";
}

<div class="row d-flex align-items-baseline">
    <div class="col-8 col-sm-8">
        <h2>Lista de Personas</h2>
    </div>
    <div class="col-4 col-sm-4 text-right">
        <p class="btn btn-outline-primary"> <a asp-action="Create"><i class="fa fa-plus"></i> Crear Nuevo</a> </p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.Id) </th>
            <th> @Html.DisplayNameFor(model => model.Apellido) y @Html.DisplayNameFor(model => model.Nombre) </th>
            <th> @Html.DisplayNameFor(model => model.FechaNac) </th>
            <th> @Html.DisplayNameFor(model => model.Dni) </th>
            <th> @Html.DisplayNameFor(model => model.Email) </th>
            <th> Tipo Persona </th>
            <th> @Html.DisplayNameFor(model => model.Avatar) </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.Id) </td>
            <td> @Html.DisplayFor(modelItem => item.Apellido) @Html.DisplayFor(modelItem => item.Nombre) </td>
            <td> @Html.DisplayFor(modelItem => item.FechaNac) </td>
            <td> @Html.DisplayFor(modelItem => item.Dni) </td>
            <td> @Html.DisplayFor(modelItem => item.Email) </td>
            <td> @Html.DisplayFor(modelItem => item.TipoPersona.Nombre) </td>
            <td>
                @if (item.Avatar != "")
                {
                    <img width="50" src="@item.Avatar" /> }
                else
                {
                    <p>Sin avatar</p>
                }
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                <a asp-action="Edit" asp-route-id="@item.Id" title="Editar" class="text-warning"><i class="far fa-edit"></i></a> │
                <a asp-action="Details" asp-route-id="@item.Id" title="Detalle"><i class="fas fa-bars"></i></a> │
                <a asp-action="Delete" asp-route-id="@item.Id" title="Borrar" class="text-danger"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
