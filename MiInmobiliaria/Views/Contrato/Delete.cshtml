@model MiInmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Delete";
}

<div class="row align-items-baseline">
    <div class="col-3 text-danger"> <h1><i class="far fa-trash-alt"></i> Borrar</h1> </div>
    <div class="col-9"> <h4>Contrato</h4> </div>
</div>
<h3>¿Estás seguro de que quieres eliminar esto?</h3>

<hr />
<div class="row">
    <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <dl class="row">
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Inmueble.Direccion)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Inmueble.Direccion)
            </dd>
            <dt class="col-3 col-sm-3">
                Inquilino
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Inquilino.Persona.Apellido) @Html.DisplayFor(model => model.Inquilino.Persona.Nombre)
            </dd>
            <dt class="col-3 col-sm-3">
                Garante
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Garante.Persona.Apellido) @Html.DisplayFor(model => model.Garante.Persona.Nombre)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Desde)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Desde)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Hasta)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Hasta)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Precio)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Precio)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="submit" value="Borrar" class="btn btn-danger" onclick="return Confirmar()" /> |
            <a asp-action="Index">Volver a la Lista</a>
        </form>

    </div>
</div>

<script type="text/javascript">
    function Confirmar() {
        var opcion = confirm("Borrar Registro. Confirma la operacion?");
        if (opcion == true) {
            return true;
        } else {
            return false;
        }
    }
</script>
