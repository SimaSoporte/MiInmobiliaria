@model MiInmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Detalle";
}

<div class="row align-items-baseline">
    <div class="col-3 text-primary"> <h1><i class="fas fa-bars"></i> Detalle</h1> </div>
    <div class="col-9"> <h4>Pago</h4> </div>
</div>

<hr />
<div class="row">
    <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <dl class="row">
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Id)
            </dd>

            <dt class="col-3 col-sm-3">
                Codigo Contrato
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.ContratoId)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Contrato.Inmueble.Direccion) Inmueble
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Contrato.Inmueble.Direccion) - $ @Html.DisplayFor(model => model.Contrato.Precio)
            </dd>
            <dt class="col-3 col-sm-3">
                Inquilino
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Contrato.Inquilino.Persona.Apellido) @Html.DisplayFor(model => model.Contrato.Inquilino.Persona.Nombre)
            </dd>


            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Numero)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Numero)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class="col-3 col-sm-3">
                @Html.DisplayNameFor(model => model.Importe)
            </dt>
            <dd class="col-9 col-sm-9 border form-control">
                @Html.DisplayFor(model => model.Importe)
            </dd>

        </dl>
    </div>
</div>

<div>
    <div class="btn btn-warning"> @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) </div> |
    <a asp-action="Index">Volver a la Lista</a>
</div>
